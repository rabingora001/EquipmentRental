<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".authenticate.LoginFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_email_id"
        android:hint="Enter your email" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_password_id"
        android:hint="Enter your password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_button_id"
        android:layout_gravity="end"
        android:text="SIGN IN" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_sign_in_btn_id1"
        android:layout_width="377dp"
        android:layout_height="446dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sing_in_with_google_id"
        android:text="Sign in with google" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up_button_id"
        android:layout_gravity="end"
        android:text="SIGN UP" />

</LinearLayout>