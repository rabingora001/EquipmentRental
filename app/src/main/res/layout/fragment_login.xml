<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFCE9F"
    tools:context=".authenticate.LoginFragment">


    <ImageView
        android:id="@+id/image_logo_id"
        android:layout_width="237dp"
        android:layout_height="201dp"
        android:src="@drawable/equipment_rental_logo"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        app:srcCompat="@mipmap/logo" />

    <EditText
        android:layout_width="222dp"
        android:layout_height="51dp"
        android:id="@+id/sign_in_email_id"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:background="@android:color/white"
        android:hint="Enter your email" />

    <EditText
        android:layout_width="222dp"
        android:layout_height="51dp"
        android:background="@android:color/white"
        android:id="@+id/sign_in_password_id"
        android:layout_marginTop="28dp"
        android:layout_gravity="center"
        android:hint="Enter your password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_button_id"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:text="SIGN IN" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_sign_in_btn_id1"
        android:layout_width="377dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="377dp"
        android:layout_height="28dp"
        android:id="@+id/sing_in_with_google_id"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:text="Sign in with google" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If not registerd, please sign up below"
        android:layout_marginTop="28dp"
        android:layout_gravity="center" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up_button_id"
        android:background="#FF9800"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="SIGN UP" />

</LinearLayout>